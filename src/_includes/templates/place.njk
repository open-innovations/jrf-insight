<h2>Spotlight navigation</h2>

{% for spotlight in spotlights %}
<a href="/spotlight/{{ spotlights }}/{{ key }}/">{{ spotlight }}</a>
{% endfor %}

<h2>Geography navigation</h2>

{{ comp.zoom.geo({ place_list: parents, heading: 'Containing geographies' }) | safe }}

