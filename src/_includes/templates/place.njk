---
layout: ./page.njk
tags:
  - place
---

<p>
This is a mockup place page for {{ name }} ({{ key }}) which is a {{ place.type }}.
</p>


{{ comp.nav_block({
  place_key: key,
  parents: parents,
  children: place.children | values | flatten,
  dir: {
    spotlight: true
  }
}) | safe }}

{% set geojson_key = key %}

<pre>
{{place_data[key].council_tax_support.rows | dump(2) }}
</pre>

{% if geojson[key] %}
{{ comp.oi.map.zoomable({
        config: {
          data: place_data[key].place_data.rows,
          geojson: 
          {
            data: geojson[key],
            key: 'ons_code'
          },
          columns: [{
            name: "label",
            template: "{{geography_code}}: {{Number of persons | toLocaleString()}}"
          }],
          key: "geography_code",
          value: "Number of persons",
          scale: "Viridis",
          min: 10000,
          max: 1000000,
          tooltip: "label",
          legend:
          {
            position: "top right",
            items: [{
                value: 1000000,
                label: '1M'},
                {
                value: 10000,
                label: '10k'
            }]
          }
        }
    }
  ) | safe }}
{% endif %}