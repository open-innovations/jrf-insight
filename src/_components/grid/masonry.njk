---
css: |
  .grid-masonry {
    --auto-grid-gap: 1rem;
    display: flex;
    gap: var(--auto-grid-gap);
    flex-wrap: wrap;
    flex-direction: row;
    align-items: stretch;
  }
  .grid-masonry > * {
    display: block;
    max-width: 100%;
    margin: 0;
    flex-grow: 1;
    flex-shrink: 0;
    flex-basis: auto;
    width: var(--masonry-brick-size, auto);
  }
---
<div class="grid-masonry" style="{{ style }}">
{{ content | safe }}
</div>